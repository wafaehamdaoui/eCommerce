{% extends 'layout.html.twig' %}
{% block body %}
  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Data Tables</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Admin</a></li>
          <li class="breadcrumb-item">Categories</li>
          <li class="breadcrumb-item active">Data</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Datatables</h5>
              <!-- Table with stripped rows -->
              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Description</th>
                    <th scope="col">Actions</th>
                  </tr>
                </thead>
                <tbody>
                {%for categorie in categories%}
                  <tr>
                    <th scope="row">{{categorie.id}}</th>
                    <td>{{categorie.nom}}</td>
                    <td>{{categorie.description}}</td>
                    <td>
                    <i href="{{path(app_categorie_edit)}}" class="btn btn-outline-info">Edit</i>
                    <i href="app_categorie_show" class="btn btn-outline-success">Show</i>
                    <i href="app_categorie_delete" class="btn btn-outline-danger" onclick="return confirm('Are you sure?')">Delete</i>
                    </td>
                  </tr>
                  {%endfor%}
                </tbody>
              </table>
              <!-- End Table with stripped rows -->

            </div>
          </div>

        </div>
      </div>
    </section>

  </main><!-- End #main -->
{%endblock%}